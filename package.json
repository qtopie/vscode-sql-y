{
  "name": "sql-y",
  "displayName": "SQL-Y",
  "description": "A good helper to write sql.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.102.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:sqlYCopilotView"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "SQL",
        "aliases": [
          "SQL"
        ],
        "extensions": [
          ".sql"
        ]
      }
    ],
    "grammars": [
      {
        "language": "SQL",
        "scopeName": "source.sql",
        "path": "./syntaxes/sql.tmGrammar.json"
      }
    ],
    "commands": [
      {
        "command": "sql-y.write-sql-for-me",
        "icon": "$(lightbulb-autofix)",
        "title": "SQL-Y: Write SQL"
      },
      {
        "command": "sql-y.openChat",
        "title": "SQL-Y: Open Chat"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "sql-y.write-sql-for-me",
          "when": "editorLangId == SQL"
        }
      ],
      "editor/title": [
        {
          "command": "sql-y.write-sql-for-me",
          "group": "navigation",
          "when": "editorTextFocus"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "sqlYCopilotViewContainer",
          "title": "SQL-Y Copilot",
          "icon": "resources/sql-y-icon.svg"
        }
      ]
    },
    "views": {
      "sqlYCopilotViewContainer": [
        {
          "id": "sqlYCopilotView",
          "type": "webview",
          "name": "SQL-Y Copilot"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc-noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/vscode": "^1.102.0",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.25.3",
    "esbuild-plugin-copy": "^2.1.1",
    "eslint": "^9.32.0",
    "npm-run-all": "^4.1.5",
    "ts-loader": "^9.5.2",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "@fluentui/react": "^8.123.5",
    "@grpc/grpc-js": "^1.13.4",
    "@grpc/proto-loader": "^0.8.0",
    "@m2d/react-markdown": "^1.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  }
}
