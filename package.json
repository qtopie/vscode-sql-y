{
  "name": "sql-y",
  "displayName": "SQL-Y",
  "description": "A good helper to write sql.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.102.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "SQL",
        "aliases": [
          "SQL"
        ],
        "extensions": [
          ".sql"
        ]
      }
    ],
    "grammars": [
      {
        "language": "SQL",
        "scopeName": "source.sql",
        "path": "./syntaxes/sql.tmGrammar.json"
      }
    ],
    "commands": [
      {
        "command": "sql-y.write-sql-for-me",
        "icon": "$(lightbulb-autofix)",
        "title": "SQL-Y: Write SQL"
      },
      {
        "command": "sql-y.rewrite-sql-for-me",
        "icon": "$(lightbulb)",
        "title": "SQL-Y: ReWrite SQL"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "sql-y.write-sql-for-me",
          "when": "editorLangId == SQL"
        },
        {
          "command": "sql-y.rewrite-sql-for-me",
          "when": "editorLangId == SQL"
        }
      ],
      "editor/title": [
        {
          "command": "sql-y.write-sql-for-me",
          "group": "navigation",
          "when": "editorTextFocus",
          "alt": "sql-y.rewrite-sql-for-me"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.102.0",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "copy-webpack-plugin": "^13.0.1",
    "eslint": "^9.32.0",
    "ts-loader": "^9.5.2",
    "typescript": "^5.9.2",
    "webpack": "^5.101.0",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "@grpc/grpc-js": "^1.13.4",
    "@grpc/proto-loader": "^0.8.0"
  }
}
